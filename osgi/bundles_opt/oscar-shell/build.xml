<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../ant/bundlebuild_include.xml">
]>

<project name="oscar-shell" default="all">

  <property name="topdir"       location="../.."/>

  <property name = "ee.check.foundation"   value = "true"/>

  <property name = "bundle.build.api"      value = "true"/>
  <property name = "bundle.build.impl"     value = "false"/>
  <property name = "bundle.build.lib"      value = "false"/>
  <property name = "bundle.build.all"      value = "true"/>

  <property name="impl.pattern"
            value="org/knopflerfish/bundle/oscarshell/*"/>

  <property name="api.pattern"
            value="org/ungoverned/osgi/service/shell/*"/>


  <path id="bundle.compile.path">
    <pathelement location="${topdir}/jars/console/console_api-1.0.0.jar"/>
  </path>


  <property name="bundle.description"    value="Compatability layer for bundles using the Oscar shell API. See readme.txt for details."/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.vendor"         value="Knopflerfish"/>
  <property name="bundle.apivendor"      value="Oscar"/>

  <property name="export.package"  
            value="org.ungoverned.osgi.service.shell; specification-version=1.0.0"/>
   <property name = "bundle.docurl"      value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/oscar-shell/readme.txt"/>
  &bundlebuild_include;

</project>
