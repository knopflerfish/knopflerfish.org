<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="junit" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "bundle.build.api"  value="false"/>
  <property name = "bundle.build.all"  value="true"/>
  <property name = "bundle.build.impl" value="false"/>
  <property name = "bundle.build.lib"  value="false"/>

  <property name = "ee.check.foundation"   value = "true"/>

  <property name="impl.pattern"
            value="org/knopflerfish/bundle/junit/**"/>

  <property name="api.pattern"
            value="org/knopflerfish/service/junit/**"/>


  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/http/http_api-1.1.0.jar"/>
   <pathelement location="${topdir}/jars/console/console_api-1.0.0.jar"/>
   <pathelement location="${topdir}/bundles/xml/crimson/resources/crimson.jar"/>
   <pathelement location="${topdir}/bundles/jsdk/resources/servlet.jar"/>
   <pathelement location="resources/junit.jar"/>
  </path>


  <property name="bundle.description"    value="JUnit support"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.name"           value="JUnit"/>
  <property name="bundle.classpath"      value=".,junit.jar"/>
  <property name="dynamicimport.package" value="org.knopflerfish.service.console,javax.servlet,javax.servlet.http,org.osgi.service.http"/>

  <property name="bundle.docurl" 
            value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/junit/readme.txt"/>

  <property name="bundle.subversionurl" 
            value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/junit/"/>

  <property name="bundle.vendor"         value="JUnit/Knopflerfish"/>
  <property name="bundle.apivendor"      value="JUnit"/>

  <property name="export.package" 
            value="org.knopflerfish.service.junit;specification-version=1.0.0,junit.framework;specification-version=3.8.1"/>

  <property name="import.package" value="org.osgi.framework,org.osgi.util.tracker"/>

  &bundlebuild_include;

</project>
