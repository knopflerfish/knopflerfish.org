<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY test_include  SYSTEM "../test_include.xml">
]>

<project name="component_test" default="all">

  <property name="topdir"       location="../"/>

  <property name="bundle.version" value="1.0.0"/>
  <property name="do.bundle.custom.pre" value="true"/>

  <target name="bundle.custom.pre">

   <copy file  = "${topdir}/jars/componentA_test-1.0.1.jar"         
         todir = "resources"/>

   <copy file  = "${topdir}/jars/component-api_test-1.0.0.jar"         
         todir = "resources"/>


  </target>

  <path id = "bundle.compile.path">
    <pathelement location="${topdir}/lib/component_api-2.0.0.jar"/>
    <pathelement location="${topdir}/jars/component-api_test-1.0.0.jar"/>
  </path>

  &test_include;


</project>



