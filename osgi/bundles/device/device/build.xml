<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="device" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "ee.check.foundation"   value = "true"/>

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
  </path>


  <property name="api.pattern"   value="org/osgi/service/device/*"/>
  <property name="impl.pattern"  value="org/knopflerfish/bundle/device/*"/>

  <property name="bundle.description"    value="Device manager"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="export.package"        value="org.osgi.service.device;specification-version=1.1.0"/>
  <property name="bundle.name"           value="Device Manager"/>
  <property name="bundle.apivendor"      value="OSGi"/>
  <property name="bundle.vendor"         value="Knopflerfish"/>

  &bundlebuild_include;

</project>
