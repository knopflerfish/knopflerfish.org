<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../ant/bundlebuild_include.xml">
]>

<project name="remotefw" default="all">

  <property name="topdir"       location="../.."/>

  <property name = "bundle.build.api"   value = "true"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>
  <property name = "bundle.build.lib"   value = "false"/>

  <property name="api.pattern" value="org/knopflerfish/service/**"/> 

  <path id="bundle.compile.path">
  </path>

  <property name="bundle.description"    value="Remote Framework API"/>
  <property name="bundle.category"       value="api"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.name"           value="RemoteFWAPI"/>
  <property name="bundle.docurl"         value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/remotefw/readme.txt"/>
  
  &bundlebuild_include;

</project>
