<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="cm_cmd" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "bundle.build.impl"  value = "true"/>
  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>

  <property name="impl.pattern" value="org/knopflerfish/bundle/cm/**"/> 

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/cm/cm_all-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/util/util-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/console/console_api-1.0.0.jar"/>
  </path>

  <property name="bundle.description"    value="Commands for the CM service"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.1"/>
  <property name="bundle.name"           value="CM Commands"/>
  <property name="bundle.vendor"         value="Knopflerfish"/>

  &bundlebuild_include;

</project>
