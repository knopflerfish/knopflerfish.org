<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="jinidriver" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "true"/>
  <property name = "bundle.build.lib"   value = "false"/>

  <property name="api.pattern" value="org/osgi/service/jini/**"/> 

  <property name="impl.pattern" value="org/knopflerfish/bundle/**"/> 

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/log/log_api-2.0.0.jar"/>
   <pathelement location="${topdir}/jars/http/http_api-2.0.0.jar"/>
   <pathelement location="${topdir}/jars/cm/cm_api-2.0.0.jar"/>
   <pathelement location="${topdir}/jars/device/device_api-2.0.0.jar"/>
   <pathelement location="resources/lib/jini-core.jar"/>
   <pathelement location="resources/lib/jini-ext.jar"/>
   <pathelement location="${topdir}/bundles/jsdk/resources/servlet.jar"/>
  </path>

  &bundlebuild_include;

</project>
