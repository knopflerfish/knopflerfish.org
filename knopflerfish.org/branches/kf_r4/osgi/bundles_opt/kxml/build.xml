<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../ant/bundlebuild_include.xml">
]>

<project name="kxml" default="all">

  <!-- Set to top directory of OSGi code -->
  <property name="topdir"       location="../.."/>

  <property name = "bundle.build.lib"   value = "true"/>
  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>

  <property name="bundle.name"           value="kXML"/>
  <property name="bundle.docurl"         value="http://www.kxml.org"/>
  <property name="bundle.contactaddress" value="http://www.kxml.org"/>
  <property name="bundle.description"    value="kXML"/>
  <property name="bundle.vendor"         value="kXML.org"/>
  <property name="bundle.version"        value="1.0"/>
  <property name="bundle.category"       value="lib"/>
  <property name="bundle.classpath"      value="kxml2.jar"/>

  <property name="export.package" value="org.xmlpull.v1, org.kxml2.io, org.kxml2.wap, org.kxml2.wap.syncml"/>

  &bundlebuild_include;

</project>
