<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../ant/bundlebuild_include.xml">
]>

<project name="commons-logging" default="all">

  <property name="topdir"       location="../.."/>

  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "true"/>
  <property name = "bundle.build.lib"   value = "false"/>

  <property name="impl.pattern" value="org/knopflerfish/**"/> 
  <property name="api.pattern" value="org/apache/**"/> 

  <property name="do.bundle.custom.pre" value="true"/>
  <target name="bundle.custom.pre">
   <copy file  = "${topdir}/jars/log/log_api-2.0.0.jar"         
         todir = "resources"/>
  </target>

  <path id="bundle.compile.path">
   <pathelement location="resources/log_api-2.0.0.jar"/>
  </path>

  &bundlebuild_include;

</project>
