<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="kf_metatype" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "api.pattern"
            value = "org/knopflerfish/util/metatype/**"/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/bundle/metatype/**"/>

  <property name = "bundle.build.lib"    value = "true"/>
  <property name = "bundle.build.api"    value = "false"/>
  <property name = "bundle.build.impl"   value = "false"/>
  <property name = "bundle.build.all"    value = "true"/>


  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/cm/cm_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/util/util-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/metatype/metatype-1.0.0.jar"/>
   <pathelement location="resources/nanoxml-2.2.1.jar"/>
   <pathelement location="${topdir}/bundles_opt/kxml/resources/kxml2.jar"/> 
  </path>
  
  
  <property name="bundle.name"           value="KF-XML-Metatype"/>
  <property name="bundle.description"    value="XML format support for CM and Metatype"/>
  <property name="bundle.vendor"         value="Knopflerfish/nanoxml"/>
  <property name="bundle.apivendor"      value="Knopflerfish"/>
  <property name="bundle.category"       value="util"/>
  <property name="bundle.docurl"         value="http://www.knopflerfish.org/XMLMetatype/"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.classpath"      value=".,/nanoxml-2.2.1.jar"/>

  <property name="export.package"        value="org.knopflerfish.util.metatype,net.n3.nanoxml;specification-version=2.2.1"/>
  <property name="import.package"    
  value="org.osgi.service.cm,org.knopflerfish.util,org.knopflerfish.service.log,org.osgi.framework,org.osgi.service.metatype,org.xmlpull.v1,org.kxml2.io"/>
  &bundlebuild_include;

</project>



