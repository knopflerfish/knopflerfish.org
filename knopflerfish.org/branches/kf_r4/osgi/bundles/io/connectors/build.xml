<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="connectors" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "ee.check.foundation"   value = "false"/>

  <property name="impl.pattern" value="org/knopflerfish/bundle/connectors/**" />

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/framework.jar"/>
   <pathelement location="${topdir}/jars/io/io_all-1.0.0.jar"/>
   <pathelement location="${topdir}/bundles/io/io/resources/javax.microedition.io.jar"/>
  </path>

  <property name="bundle.description"    value="OSGi IO http, socket and datagram-receive Connectors"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.name"           value="Connection Factories"/>

  &bundlebuild_include;

</project>