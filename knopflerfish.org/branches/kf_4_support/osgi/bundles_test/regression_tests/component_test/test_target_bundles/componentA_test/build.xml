            value="org/knopflerfish/service/**"/>


  <path id = "bundle.compile.path">
    <pathelement location="component_api-N.N.N.jar"/>
    <pathelement location="${all.jar}/../component-api_test-1.0.0.jar"/>
  </path>

  <import file="${ant.dir}/bundlebuild.xml"/>

