<?xml version="1.0"?>

<metatype:metatype
        xmlns:metatype = "http://www.knopflerfish.org/XMLMetatype"
        xmlns:xsd      = "http://www.w3.org/2001/XMLSchema">

  <xsd:schema >
   <xsd:complexType name="org.osgi.fileinstall">
    <xsd:annotation>
     <xsd:documentation><![CDATA[
Configuration for directory deployer bundle, similar to the OSGi "fileinstall" bundle.
]]></xsd:documentation>
    </xsd:annotation>

    <xsd:element name = "org.osgi.fileinstall.dir"  type="xsd:string">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
     Set the directories that should be scanned.
<p>
        The initial set of directories are read from the 
	system property org.osgi.fileinstall.dir, which 
	should be a comma-separated list of directory paths. If this property
	is not set, the single default path is ./load.
</p>
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

    <xsd:element name = "org.osgi.fileinstall.poll"  type="xsd:long">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
Poll interval in milliseconds between directory scans. Must be at least 100 ms.
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

    <xsd:element name = "org.osgi.fileinstall.startlevel"  type="xsd:int">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
Bundle start level of all newly installed bundles.
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

   </xsd:complexType> 
  </xsd:schema>
  
  <!-- the default values are represented by an instance of the -->
  <!-- schema specified above                                   -->

  <metatype:values>

   <org.osgi.fileinstall>
    <org.osgi.fileinstall.dir>
     ./load
    </org.osgi.fileinstall.dir>
    <org.osgi.fileinstall.poll>
     1000
    </org.osgi.fileinstall.poll>
    <org.osgi.fileinstall.startlevel>
     1
    </org.osgi.fileinstall.startlevel>
   </org.osgi.fileinstall>

  </metatype:values>

</metatype:metatype>
