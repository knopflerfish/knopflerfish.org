<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../ant/bundlebuild_include.xml">
]>

<project name="metatype" default="all">

  <property name="topdir"       location="../.."/>


  <property name="api.pattern" value="org/osgi/**"/> 

  <property name = "bundle.build.lib"   value = "true"/>
  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>

  <path id="bundle.compile.path">
  </path>

  <property name="bundle.description"    value="Metatype API"/>
  <property name="bundle.category"       value="API"/>
  <property name="bundle.vendor"         value="OSGi"/>
  <property name="bundle.version"        value="1.0.0"/>


  <property name="export.package"        value="org.osgi.service.metatype;specification-version=1.0"/>

  &bundlebuild_include;

</project>
