<?xml version="1.0"?>

<metatype:metatype
        xmlns:metatype = "http://www.knopflerfish.org/XMLMetatype"
        xmlns:xsd      = "http://www.w3.org/2001/XMLSchema">

  <xsd:schema >
   <xsd:complexType name="org.knopflerfish.dirdeployer">
    <xsd:annotation>
     <xsd:documentation>Configuration for directory deployer service
     </xsd:documentation>
    </xsd:annotation>

    <xsd:element name = "org.knopflerfish.dirdeployer.dirs"  type="xsd:string">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
     Set the directories that should be scanned.
<p>
        The initial set of directories are read from the 
	system property org.knopflerfish.dirdeployer.dirs, which 
	should be a comma-separated list of directory paths. If this property
	is not set, the single default path is deploy.
</p>
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

    <xsd:element name = "org.knopflerfish.dirdeployer.interval"  type="xsd:long">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
Interval in milliseconds between directory scans. Must be at least 100 ms.
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

    <xsd:element name = "org.knopflerfish.dirdeployer.startlevel"  type="xsd:int">
     <xsd:annotation>
      <xsd:documentation><![CDATA[
Bundle start level of all newly installed bundles.
]]></xsd:documentation>
     </xsd:annotation>
    </xsd:element>

   </xsd:complexType> 
  </xsd:schema>
  
  <metatype:values>
   <org.knopflerfish.dirdeployer>

    <org.knopflerfish.dirdeployer.dirs>
     deploy
    </org.knopflerfish.dirdeployer.dirs>

    <org.knopflerfish.dirdeployer.interval>
     1000
    </org.knopflerfish.dirdeployer.interval>

    <org.knopflerfish.dirdeployer.startlevel>
     1
    </org.knopflerfish.dirdeployer.startlevel>

   </org.knopflerfish.dirdeployer>

  </metatype:values>

</metatype:metatype>
