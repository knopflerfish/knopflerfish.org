<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="junit_runner" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "bundle.build.api"  value="false"/>
  <property name = "bundle.build.all"  value="true"/>
  <property name = "bundle.build.impl" value="false"/>
  <property name = "bundle.build.lib"  value="false"/>

  <property name = "ee.check.foundation"   value = "true"/>

  <property name="impl.pattern"
            value="org/knopflerfish/bundle/junit_runner/**"/>

  <property name="api.pattern"
            value="org/knopflerfish/service/junit_runner/**"/>


  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/junit/junit_all-1.0.0.jar"/>
   <pathelement location="${topdir}/bundles_opt/junit/resources/junit.jar"/>
  </path>


  <property name="bundle.description"    value="JUnit test runner. Reads the system property org.knopflerfish.junit_runner.tests and runs these. Test results are wirtten to the directory from property org.knopflerfish.junit_runner.outdir"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.name"           value="JUnitRunner"/>

  <property name="bundle.docurl" 
            value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/junit/junit_runner/readme.txt"/>

  <property name="bundle.subversionurl" 
            value="https://www.knopflerfish.org/svn/knopflerfish.org/trunk/osgi/bundles_opt/junit/junit_runner/"/>

  <property name="bundle.vendor"         value="Knopflerfish"/>

  <property name="export.package" value="[bundle.emptystring]"/>

  &bundlebuild_include;

</project>
