<?xml version="1.0"?>

<metatype:metatype
        xmlns:metatype = "http://www.knopflerfish.org/XMLMetatype"
        xmlns:xsd      = "http://www.w3.org/2001/XMLSchema">

 <metatype:services>

  <xsd:schema >
   <xsd:complexType name="testconfig">
    <xsd:annotation>
     <xsd:documentation>The log configuration sets properties for the 
                        Knopflerfish log.
     </xsd:documentation>
    </xsd:annotation>

    <xsd:simpleType name = "default.level">
     <xsd:annotation>
      <xsd:documentation>Set the default log level, when not set for specific
                         bundles.
      </xsd:documentation>
     </xsd:annotation>


     <xsd:restriction base="xsd:string">
      <xsd:enumeration value="debug">
       <xsd:annotation>
         <xsd:documentation>Debug</xsd:documentation>
       </xsd:annotation>
      </xsd:enumeration>
      <xsd:enumeration value="info"/>
      <xsd:enumeration value="warning"/>
      <xsd:enumeration value="error"/>
     </xsd:restriction>
    </xsd:simpleType>

    <xsd:complexType name = "bundle.log.level">
     <xsd:sequence array="false">
      <xsd:simpleType name = "item">
        <restriction base="xsd:string"/>
      </xsd:simpleType>
     </xsd:sequence>
    </xsd:complexType>
    <xsd:element  name = "memory.size" type="xsd:int"/>
    <xsd:element  name = "log.out"     type="xsd:boolean"/>
   </xsd:complexType> 
  </xsd:schema>



  <xsd:schema xmlns="http://www.w3.org/2001/XMLSchema" >
   <xsd:complexType name="service1">
    <xsd:element   name="string1" type="xsd:string"/>
   </xsd:complexType> 
  </xsd:schema>

</metatype:services>

<metatype:factories>
  <xsd:schema xmlns="http://www.w3.org/2001/XMLSchema" >
             
   <xsd:complexType name="factory1">
    <xsd:element  name="boolean1"   type="xsd:boolean"/>
    <xsd:element  name="string1"    type="xsd:string"/>
    <xsd:complexType name = "intvector1">
     <xsd:sequence array="true">
      <xsd:element name = "item" type="xsd:int"/>
     </xsd:sequence>
    </xsd:complexType>
   </xsd:complexType>
 </xsd:schema>
</metatype:factories>

</metatype:metatype>



