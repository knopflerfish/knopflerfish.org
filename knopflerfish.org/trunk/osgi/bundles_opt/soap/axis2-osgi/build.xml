   <pathelement location="resources/WEB-INF/lib/XmlSchema-1.3.2.jar"/>
   <pathelement location="resources/WEB-INF/lib/axiom-api-1.2.5.jar"/>

   <pathelement location="resources/WEB-INF/lib/commons-httpclient-3.0.1.jar"/>
