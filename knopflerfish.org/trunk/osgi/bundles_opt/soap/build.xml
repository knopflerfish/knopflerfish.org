<?xml version="1.0"?>

<project name="soap" default="all">

   <target name="all">
    <ant dir="../commons-logging"   target="all"/>
    <ant dir="axis-osgi"            target="all"/>
    <ant dir="axis2-osgi"           target="all"/>
    <ant dir="soap_desktop"         target="all"/>
    <ant dir="soap_remotefw"        target="all"/>
    <ant dir="soapobject"           target="all"/>
    <ant dir="demos"                target="all"/>
    <ant dir="ksoap-osgi"           target="all"/>
    <ant dir="ksoap_remotefw"       target="all"/>
  </target>

   <target name="clean">
    <ant dir="../commons-logging"   target="clean"/>
    <ant dir="axis-osgi"            target="clean"/>
    <ant dir="axis2-osgi"           target="clean"/>
    <ant dir="soap_desktop"         target="clean"/>
    <ant dir="soap_remotefw"        target="clean"/>
    <ant dir="soapobject"           target="clean"/>
    <ant dir="demos"                target="clean"/>
    <ant dir="ksoap-osgi"           target="clean"/>
    <ant dir="ksoap_remotefw"       target="clean"/>
  </target>

  <property name="topdir" location="../.."/>
  <import file="${topdir}/../ant/docbuild_include.xml"/>

  <target name="bundle_doc_overview">
    <!-- The root of the local bundle docs directory. -->
    <property name = "docs.dir" location = "${topdir}/out/doc"/>
    <antcall target="build_doc">
      <param name="docbuild.name" value="soap"/>
      <param name="docbuild.title" value="Web Services / SOAP"/>
      <param name="docbuild.fromdir" location="doc"/>
      <param name="docbuild.outdir"  location="${docs.dir}/soap"/>
      <param name="docbuild.description"
	     value="How to export a registered service as a Web Service using SOAP"/>
    </antcall>
  </target>

  <target name="bundle_doc"
	  depends="bundle_doc_overview">
    <ant dir="axis-osgi"            target="bundle_doc"/>
    <ant dir="axis2-osgi"           target="bundle_doc"/>
    <ant dir="soapobject"           target="bundle_doc"/>
    <ant dir="soap_desktop"         target="bundle_doc"/>
    <ant dir="soap_remotefw"        target="bundle_doc"/>
    <ant dir="ksoap-osgi"           target="bundle_doc"/>
    <ant dir="ksoap_remotefw"       target="bundle_doc"/>
  </target>

</project>
