<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="axis-osgi" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/**"/>

  <property name  = "api.pattern"
            value = "org/knopflerfish/service/axis/**"/>

  <property name = "bundle.build.all"  value="true"/>
  <property name = "bundle.build.api"  value="false"/>
  <property name = "bundle.build.lib"  value="lib"/>
  <property name = "bundle.build.impl" value="false"/>

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/jsdk/jsdk_api-2.5.jar"/>
   <pathelement location="${topdir}/jars/http/http_api-2.1.0.jar"/>
   <pathelement location="${topdir}/jars/log/log_api-2.0.0.jar"/>
   <pathelement location="${topdir}/jars/crimson/crimson-2.0.0.jar"/>
   <pathelement location="resources/axis.jar"/>
   <pathelement location="imports/commons-logging.jar"/>
   <pathelement location="resources/jaxrpc.jar"/>
   <pathelement location="resources/saaj.jar"/>
  </path>

  &bundlebuild_include;

</project>

