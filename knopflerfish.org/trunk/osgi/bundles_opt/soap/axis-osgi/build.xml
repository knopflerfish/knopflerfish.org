<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="axis-osgi" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/**"/>


  <path id="bundle.compile.path">
   <!--pathelement location="${topdir}/api/framework.jar"/-->
   <pathelement location="${topdir}/jars/http/http_api-1.0.0.jar"/>
   <pathelement location="${topdir}/bundles/jsdk/resources/servlet.jar"/>
   <pathelement location="resources/axis.jar"/>
   <pathelement location="imports/commons-logging.jar"/>
   <pathelement location="resources/jaxrpc.jar"/>
   <pathelement location="resources/saaj.jar"/>
  </path>

  <property name="import.package" value ="org.osgi.framework,org.apache.commons.logging,org.osgi.service.http,javax.servlet,javax.servlet.http"/>


  <property name="bundle.description"    value="Axis Server"/>
  <property name="bundle.vendor"         value="knopflerfish"/>
  <property name="bundle.category"       value="experiment"/>
  <property name="bundle.version"        value="0.0.2"/>
  <property name="bundle.activator"        value="org.knopflerfish.bundle.axis.Activator"/>
  <property name="bundle.classpath"      value = ".,axis.jar,commons-discovery.jar,jaxrpc.jar,saaj.jar,wsdl4j.jar"/>

 <!-- set do.bundle.custom.post to anything to trigger post target --> 
<!--property name="do.bundle.custom.post" value="do"/-->

<target name="bundle.custom.post">
  <jar jarfile  = "${impl.jar}"  update   = "true">
    <manifest>
      <attribute name = "DynamicImport-Package"        value = "*"/>
    </manifest>
   </jar>


</target>

 

  &bundlebuild_include;

</project>

