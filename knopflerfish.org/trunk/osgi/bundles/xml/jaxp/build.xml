<?xml version="1.0" encoding="UTF-8"?>

<project name="jaxp" default="all">

  <dirname  property="proj.dir" file="${ant.file.jaxp}"/>
  <property name="topdir"       location="${proj.dir}/../../.."/>

  <property name = "bundle.build.lib"   value = "true"/>
  <property name = "bundle.build.api"   value = "false"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "false"/>


  <property name="bmfa.Bundle-Version"        value="1.0"/>
  <property name="bmfa.Bundle-Category"       value="lib"/>
  <property name="bmfa.Bundle-Description"    value="The Sun JAXP XML parser"/>
  <property name="bmfa.Bundle-Vendor"         value="Sun/Knopflerfish"/>
  <property name="bmfa.Bundle-Classpath"      value="parser.jar,jaxp.jar"/>
  <property name="bmfa.Bundle-Name"           value="JAXP XML lib"/>

  <property name="bmfa.Export-Package"        value="com.sun.xml.parser ; specification-version=1.0, com.sun.xml.tree ; specification-version=1.0, com.sun.xml.util ; specification-version=1.0, org.w3c.dom ; specification-version=2.0, org.xml.sax ; specification-version=2.0, org.xml.sax.helpers ; specification-version=2.0, javax.xml.parsers ; specification-version=2.0"/>

  <import file="${topdir}/../ant/bundlebuild.xml"/>

</project>
