<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="metatype_demo" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/bundle/demo/metatype/**"/>


  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/cm/cm_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/metatype/metatype-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/kf_metatype/kf_metatype-1.0.0.jar"/>
  </path>
  
  
  <property name="bundle.description"    value="Metatype demo"/>
  <property name="bundle.name"           value="Metatype demo"/>
  <property name="bundle.vendor"         value="knopflerfish"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>

  <property name="import.package" value="org.osgi.service.cm,org.knopflerfish.util.metatype,org.knopflerfish.service.log,org.osgi.framework,org.osgi.service.metatype"/>
  &bundlebuild_include;

</project>



