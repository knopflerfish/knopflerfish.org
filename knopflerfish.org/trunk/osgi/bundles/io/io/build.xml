<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="io" default="all">

  <property name = "topdir"  location="../../.."/>

  <property name = "ee.check.foundation"   value = "false"/>

  <property name = "bundle.build.lib"   value = "false"/>
  <property name = "bundle.build.api"   value = "true"/>
  <property name = "bundle.build.impl"  value = "false"/>
  <property name = "bundle.build.all"   value = "true"/>

  <property name="api.pattern"  value="org/osgi/service/**"/> 
  <property name="impl.pattern" value="org/knopflerfish/bundle/io/**"/> 

  <path id="bundle.compile.path">
   <pathelement location="log_api-N.N.N.jar"/>
   <pathelement location="resources/javax.microedition.io.jar"/>
  </path>

  &bundlebuild_include;

</project>
