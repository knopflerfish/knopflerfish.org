<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="bundleP3_test" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "api.pattern"
            value = "org/knopflerfish/service/**"/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/bundle/**"/>

  <property name = "bundle.build.api"    value = "false"/>
  <property name = "bundle.build.lib"    value = "false"/>
  <property name = "bundle.build.impl"   value = "false"/>
  <property name = "bundle.build.all"    value = "true"/>

  <path id="bundle.compile.path">
  </path>
  
  
  <property name="bundle.description"    value="Test bundle for framework, bundleP3_test for test of version control of exported packages."/>
  <property name="bundle.category"       value="test"/>
  <property name="bundle.vendor"         value="Knopflerfish/Gatespace Telematics"/>
  <property name="bundle.version"        value="1.0.0"/>

  <property name="export.package"      value="org.knopflerfish.bundle.bundleP1_test; specification-version=3.0"/>

  <property name="import.package"      value="[bundle.emptystring]"/>

<!--
  <property name="bundle.activator"      value="[bundle.emptystring]"/>
  <property name="import.package"      value="[bundle.emptystring]"/>

-->
  &bundlebuild_include;

</project>



