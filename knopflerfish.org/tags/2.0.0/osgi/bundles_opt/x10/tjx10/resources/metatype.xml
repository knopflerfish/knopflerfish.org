<?xml version="1.0"?>

<metatype:metatype
        xmlns:metatype = "http://www.knopflerfish.org/XMLMetatype"
        xmlns:xsd      = "http://www.w3.org/2001/XMLSchema">

  <xsd:schema>
   <xsd:complexType name="org.knopflerfish.tjx10.controllers"
                    maxOccurs="unbounded">
    <xsd:element  name = "port"                    type="xsd:string"/>

    <xsd:simpleType name = "module">
     <xsd:annotation>
      <xsd:documentation>Module name attached to serial port</xsd:documentation>
     </xsd:annotation>

     <xsd:restriction base="xsd:string">
      <xsd:enumeration value="cm11a">
       <xsd:annotation>
         <xsd:documentation>CM11A</xsd:documentation>
       </xsd:annotation>
      </xsd:enumeration>

      <xsd:enumeration value="cm17a">
       <xsd:annotation>
         <xsd:documentation>CM17A/Firecracker</xsd:documentation>
       </xsd:annotation>
      </xsd:enumeration>

     </xsd:restriction>
    </xsd:simpleType>

   </xsd:complexType> 

  </xsd:schema>

  <metatype:values>
    <org.knopflerfish.tjx10.controllers>
     <port>COM1</port>
     <module>cm11a</module>
    </org.knopflerfish.tjx10.controllers>
  </metatype:values>

</metatype:metatype>
