<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="soapobject" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/bundle/soapobject/**"/>


  <path id="bundle.compile.path">
  </path>

  <!--property name="import.package" value ="javax.servlet,javax.servlet.http,org.osgi.framework,org.osgi.service.http"/-->


  <property name="bundle.description"    value="SOAP objects"/>
  <property name="bundle.vendor"         value="knopflerfish"/>
  <property name="bundle.category"       value="experiment"/>
  <property name="bundle.version"        value="0.0.2"/>
  <!--property name="bundle.classpath"      value = ".,spheon-jsoap.jar"/-->

 <!-- set do.bundle.custom.post to anything to trigger post target --> 
<property name="do.bundle.custom.post" value="do"/>

<target name="bundle.custom.post">
   <jar jarfile  = "${impl.jar}"  update   = "true">
    <manifest>
      <attribute name = "Export-Package"        value = "org.knopflerfish.bundle.soapobject"/>
    </manifest>
   </jar>
</target>



  &bundlebuild_include;

</project>
