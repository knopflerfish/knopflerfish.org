<project name="bundletasks" basedir="." default="default">

 <dirname  property="ant.dir" file="${ant.file.bundletasks}"/>

 <property name="ant.lib"       location="${ant.dir}/lib"/>
 <property name="antclasses"    location="${ant.dir}/classes"/>
 <property name="osgi.dir"      location="${ant.dir}/../osgi"/>
 <property name="framework.dir" location="${osgi.dir}/framework"/>


 <!-- Download and install Apache Byte Code Engineering Library -->
 <property name="bcel.version" value="5.2"/> 
 <path id="bcel.path">
   <pathelement location="${ant.lib}/bcel-${bcel.version}.jar"/>
 </path>
 <available classname="org.apache.bcel.classfile.JavaClass"
            classpathref="bcel.path"
            property="bcel.present"/>

 <target name="check_bcel">
   <fail unless  = "bcel.present" 
         message = "BCEL lib not available. Please download from http://jakarta.apache.org/bcel and install bcel-${bcel.version}.jar in ${ant.lib} or $$ANT_HOME/lib. You can also try  'ant install_bcel' which will download bcel and then install it in ${ant.lib}"/>
 </target>

 <target name="install_bcel" unless="bcel.present"
	 description="Installs BCEL in ant/lib">
   <antcall target="download_bcel"/>
   <antcall target="unpack_bcel"/>
 </target>

 <target name="download_bcel">
   <mkdir dir = "${ant.lib}"/>
   <get src = "http://apache.org/dist/jakarta/bcel/binaries/bcel-${bcel.version}.zip" 
        dest = "${ant.lib}/bcel-${bcel.version}.zip"/>
 </target>

 <target name="unpack_bcel">
   <unzip src = "${ant.lib}/bcel-${bcel.version}.zip"
         dest = "${ant.lib}">
    <patternset>
     <include name="bcel-${bcel.version}/bcel-${bcel.version}.jar"/>
    </patternset>
   </unzip>
   <move file   = "${ant.lib}/bcel-${bcel.version}/bcel-${bcel.version}.jar" 
         tofile = "${ant.lib}/bcel-${bcel.version}.jar"/>
   <delete dir  = "${ant.lib}/bcel-${bcel.version}"/>
   <delete file = "${ant.lib}/bcel-${bcel.version}.zip"/>
 </target>


 <!-- Download and install BIndex the RFC-0112 Bundle Repository creator.  -->
 <path id="bindex.path">
  <pathelement location = "${ant.lib}/bindex.jar"/>
 </path>

 <available classname="org.osgi.impl.bundle.bindex.Index"
            classpathref="bindex.path"
            property="bindex.present"/>

 <target name="install_bindex" unless="bindex.present">
   <get src="http://www.osgi.org/download/bindex.jar" 
        dest="${ant.lib}/bindex.jar"/>
 </target>


 <!-- Compile and pack the Knopflerfish bundle tasks.  -->
 <property name="bundle_tasks.jar" location="${ant.lib}/bundle_tasks.jar"/>
 <condition property="bundle_tasks.src.present">
   <and>
     <available type="dir" file="${ant.dir}/src"/>
     <available type="dir" file="${framework.dir}/src"/>
   </and>
 </condition>

 <target name="build_bundle_tasks" if="bundle_tasks.src.present">
   <mkdir dir = "${antclasses}"/>
   <javac destdir      = "${antclasses}"
	  classpathref = "bundle_tasks.path"
	  target       = "1.4"
          source       = "1.4"
          debug        = "on">
     <src path="${ant.dir}/src"/>
     <!-- org.osgi.framework.Version is used by BundleLocator. -->
     <src path="${framework.dir}/src"/>
     <include name="org/knopflerfish/ant/**"/>
     <include name="org/osgi/framework/Version.java"/>
   </javac>

   <jar destfile="${bundle_tasks.jar}"
        compress="true">
     <manifest>
       <attribute name="knopflerfish-version" value="${version}"/>
     </manifest>
     <zipfileset dir="${antclasses}"/>
   </jar>	
 </target>

 <path id="bundle_tasks.path">
   <pathelement location="${antclasses}"/>
   <pathelement location="${bundle_tasks.jar}"/>
   <path refid="bcel.path"/>
   <path refid="bindex.path"/>
 </path>

 <target name        = "bundle_tasks" 
         depends     = "install_bcel,install_bindex,build_bundle_tasks"
         description = "Defines the custom Knopflerfish bundle tasks">

   <taskdef name         = "bundleinfo" 
            classpathref = "bundle_tasks.path"
     classname = "org.knopflerfish.ant.taskdefs.bundle.BundleInfoTask"/>

   <taskdef name         = "bundlemanifest" 
            classpathref = "bundle_tasks.path"
     classname = "org.knopflerfish.ant.taskdefs.bundle.BundleManifestTask"/>

   <taskdef name         = "bundleClasspathUtil" 
            classpathref = "bundle_tasks.path"
     classname = "org.knopflerfish.ant.taskdefs.bundle.BundleClasspathTask"/>

   <taskdef name         = "bundlehtml" 
            classpathref = "bundle_tasks.path"
     classname = "org.knopflerfish.ant.taskdefs.bundle.BundleHTMLExtractorTask"/>

   <taskdef name        = "bundleobr" 
            classpathref = "bundle_tasks.path"
     classname = "org.knopflerfish.ant.taskdefs.bundle.OBRExtractorTask"/>

   <taskdef name="bindex"
            classpathref="bundle_tasks.path"
	    classname="org.knopflerfish.ant.taskdefs.bundle.BIndexTask"/>

    <taskdef name="makehtml"
             classpathref="bundle_tasks.path"
             classname="org.knopflerfish.ant.taskdefs.bundle.MakeHTMLTask"/>

    <taskdef name="extrabundledoc"
             classpathref="bundle_tasks.path"
             classname="org.knopflerfish.ant.taskdefs.bundle.ExtraBundleDocTask"/>
    <taskdef name="byteformatter"
             classpathref="bundle_tasks.path"
             classname="org.knopflerfish.ant.taskdefs.bundle.ByteFormatterTask"/>
    <taskdef name="bundle_locator"
             classpathref="bundle_tasks.path"
             classname="org.knopflerfish.ant.taskdefs.bundle.BundleLocator"/>

    <taskdef name="bundle_javadoc_helper"
             classpathref="bundle_tasks.path"
             classname="org.knopflerfish.ant.taskdefs.bundle.BundleJavadocHelperTask"/>

 </target>

 <target name="default" depends="check_bcel,bundle_tasks"/>

</project>
