<?xml version="1.0" encoding="UTF-8"?>

<project name="axis-osgi" default="all">

  <dirname  property="proj.dir" file="${ant.file.axis-osgi}"/>
  <property name="topdir"       location="${proj.dir}/../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/**"/>

  <property name  = "api.pattern"
            value = "org/knopflerfish/service/axis/**"/>

  <property name = "bundle.build.all"  value="true"/>
  <property name = "bundle.build.api"  value="false"/>
  <property name = "bundle.build.lib"  value="lib"/>
  <property name = "bundle.build.impl" value="false"/>
  <property name = "bundle.build.doc"  value="true"/>

  <!-- Don't complain about the follwoing intentionally missing imports.  -->
  <!-- I.e., Packages referenced from unused classes in the embedded jars.-->
  <property name="bundle.stdimports"
	    value="java.,com.sun.jimi.core,com.sun.net.ssl,com.sun.net.ssl.internal.ssl,javax.activation,javax.imageio,javax.imageio.metadata,javax.imageio.stream,javax.jms,javax.mail,javax.mail.internet,javax.naming,javax.naming.spi,javax.net,javax.net.ssl,javax.rmi,javax.swing,javax.swing.border,javax.swing.event,javax.swing.plaf.basic,javax.swing.table,javax.swing.text,javax.xml.parsers,junit.framework,org.omg.CORBA,org.omg.CosNaming,org.w3c.dom,org.xml.sax,org.xml.sax.ext,org.xml.sax.helpers,sun.awt.image.codec,sun.security.provider,test.wsdl.import2.types"/>

  <path id="bundle.compile.path">
   <pathelement location="jsdk_api-N.N.N.jar"/>
   <pathelement location="http_api-N.N.N.jar"/>
   <pathelement location="log_api-N.N.N.jar"/>
   <pathelement location="crimson-N.N.N.jar"/>
   <pathelement location="resources/axis.jar"/>
   <pathelement location="imports/commons-logging.jar"/>
   <pathelement location="resources/jaxrpc.jar"/>
   <pathelement location="resources/saaj.jar"/>
  </path>

  <import file="${topdir}/../ant/bundlebuild.xml"/>

</project>

