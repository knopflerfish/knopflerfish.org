<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="desktop_jvm" default="all">

  <property name="topdir"       location="../../.."/>

  <property name  = "impl.pattern"
            value = "org/knopflerfish/bundle/desktop/**"/>

<!--
  <property name = "bundle.icon" value="boing32x32.png"/>
-->

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/log/log_api-2.0.0.jar"/>
   <pathelement location="${topdir}/jars/desktop/desktop_api-2.0.1.jar"/>
  </path>
  
  
  <property name="bmfa.Bundle-Description"    value="JVM info desktop plugin"/>
  <property name="bmfa.Bundle-Vendor"         value="Knopflerfish"/>
  <property name="bmfa.Bundle-Category"       value="service"/>
  <property name="bmfa.Bundle-Version"        value="1.0.0"/>

  &bundlebuild_include;

</project>



