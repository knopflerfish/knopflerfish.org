<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="servicetracker" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "bundle.build.lib"    value = "true"/>
  <property name = "bundle.build.api"    value = "false"/>
  <property name = "bundle.build.impl"   value = "false"/>
  <property name = "bundle.build.all"    value = "false"/>

  <property name="trackerdir"   value="org/osgi/util/tracker"/>
  <property name="api.pattern"  value="${trackerdir}/*"/> 

  <property name="do.bundle.custom.pre" value="true"/>

  <target name="bundle.custom.pre">
   <mkdir dir="src/${trackerdir}"/>
   <copy  todir = "src/${trackerdir}">
      <fileset dir="${topdir}/framework/src/${trackerdir}"/>
   </copy>
  </target>

  <path id="bundle.compile.path">
  </path>

  <property name="bundle.description"    value="OSGi Service tracker"/>
  <property name="bundle.category"       value="util"/>
  <property name="bundle.vendor"         value="Knopflerfish"/>
  <property name="bundle.apivendor"      value="OSGi"/>
  <property name="bundle.version"        value="1.1.0"/>
  <property name="bundle.docurl"         value="http://www.osgi.org"/>

  <property name="export.package"        value="org.osgi.util.tracker;specification-version=1.2"/>

  &bundlebuild_include;

</project>
