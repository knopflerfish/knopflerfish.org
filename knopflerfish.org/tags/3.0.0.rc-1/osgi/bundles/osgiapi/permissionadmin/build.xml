<?xml version="1.0" encoding="UTF-8"?>

<project name="permissionadmin" default="all">

  <dirname  property="proj.dir" file="${ant.file.permissionadmin}"/>
  <property name="topdir"       location="${proj.dir}/../../.."/>

  <property name = "bundle.build.lib"    value = "true"/>
  <property name = "bundle.build.api"    value = "false"/>
  <property name = "bundle.build.impl"   value = "false"/>
  <property name = "bundle.build.all"    value = "false"/>

  <property name="padir"   value="org/osgi/service/permissionadmin"/>
  <property name="api.pattern"  value="${padir}/*"/> 

  <property name="do.bundle.custom.pre" value="true"/>

  <target name="bundle.custom.pre">
   <mkdir dir="src/${padir}"/>
   <copy  todir = "src/${padir}">
      <fileset dir="${topdir}/framework/src/${padir}"/>
   </copy>
  </target>

  <path id="bundle.compile.path">
  </path>

  <property name="bmfa.Bundle-Description" value="OSGi Permission admin"/>
  <property name="bmfa.Bundle-Category"    value="util"/>
  <property name="bmfa.Bundle-Vendor"      value="OSGi"/>
  <property name="bmfa.Bundle-Version"     value="1.1.0"/>
  <property name="bmfa.Bundle-DocURL"      value="http://www.osgi.org"/>

  <property name="bmfa.Export-Package"     value="org.osgi.service.permissionadmin;specification-version=1.1"/>

  <import file="${topdir}/../ant/bundlebuild.xml"/>

</project>
