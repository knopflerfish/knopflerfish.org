<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="ksoap_remotefw" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "ee.check.foundation"   value = "false"/>

  <property name = "bundle.build.api"      value = "false"/>
  <property name = "bundle.build.impl"     value = "false"/>
  <property name = "bundle.build.lib"      value = "false"/>
  <property name = "bundle.build.all"      value = "true"/>

  <property name="impl.pattern"
            value="org/knopflerfish/bundle/soap/**"/>

  <property name="api.pattern"
            value="org/knopflerfish/service/soap/**"/>

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/util/util-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/console/console_api-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/remotefw/remotefw_api-1.0.0.jar"/>
   <pathelement location="../ksoap-osgi/resources/ksoap2-j2me-full.jar"/>
  </path>


  <property name="bundle.description"    value="kSOAP remote framework"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.docurl"         value="http://www.knopflerfish.org/remote_howto.html"/>
  <property name="bundle.name"           value="kSOAP FW"/>

  <property name="bundle.apivendor"      value="Knopflerfish"/>

<!--
  <property name="export.package"
            value="org.knopflerfish.service.soap.remotefw"/>
-->

  <property name="import.package"
            value="org.ksoap2,org.ksoap2.serialization,org.ksoap2.transport,org.osgi.framework,org.knopflerfish.service.log,org.osgi.service.log,org.osgi.service.startlevel,org.osgi.service.packageadmin,org.osgi.service.startlevel,org.osgi.service.packageadmin,org.osgi.util.tracker,org.knopflerfish.util,org.knopflerfish.service.remotefw,org.knopflerfish.service.console"/>

  &bundlebuild_include;

</project>
