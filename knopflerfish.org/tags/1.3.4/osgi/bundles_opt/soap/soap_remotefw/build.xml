<?xml version="1.0"?>

<!DOCTYPE project [
  <!ENTITY bundlebuild_include  SYSTEM "../../../../ant/bundlebuild_include.xml">
]>

<project name="soap_remotefw" default="all">

  <property name="topdir"       location="../../.."/>

  <property name = "ee.check.foundation"   value = "false"/>

  <property name = "bundle.build.api"      value = "false"/>
  <property name = "bundle.build.impl"     value = "false"/>
  <property name = "bundle.build.lib"      value = "false"/>
  <property name = "bundle.build.all"      value = "true"/>

  <property name="impl.pattern"
            value="org/knopflerfish/bundle/soap/**"/>

  <property name="api.pattern"
            value="org/knopflerfish/service/soap/**"/>

  <path id="bundle.compile.path">
   <pathelement location="${topdir}/jars/util/util-1.0.0.jar"/>
   <pathelement location="${topdir}/jars/log/log_api-1.0.1.jar"/>
   <pathelement location="${topdir}/jars/remotefw/remotefw_api-1.0.0.jar"/>
   <pathelement location="${topdir}/bundles/xml/crimson/resources/crimson.jar"/>
   <pathelement location="../axis-osgi/resources/wsdl4j.jar"/>
   <pathelement location="../axis-osgi/resources/qname.jar"/>
   <pathelement location="../axis-osgi/resources/axis.jar"/>
   <pathelement location="../axis-osgi/resources/jaxrpc.jar"/>
  </path>


  <property name="bundle.description"    value="SOAP remote framework"/>
  <property name="bundle.category"       value="service"/>
  <property name="bundle.version"        value="1.0.0"/>
  <property name="bundle.name"           value="SOAP FW"/>

<!--
  <property name="export.package"
            value="org.knopflerfish.service.soap.remotefw"/>
-->

  <property name="import.package"
            value="javax.wsdl,javax.wsdl.extensions,javax.wsdl.factory,javax.wsdl.xml,javax.xml.namespace,javax.xml.rpc,org.apache.axis.client,org.osgi.framework,org.w3c.dom,org.knopflerfish.service.log,org.osgi.service.log,org.osgi.service.startlevel,org.osgi.service.packageadmin,org.osgi.service.startlevel,org.osgi.service.packageadmin,org.osgi.util.tracker,org.knopflerfish.util,org.knopflerfish.service.remotefw"/>

  &bundlebuild_include;

</project>
